<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <fragment
            android:id="@+id/fragment_weather"
            android:name="ru.smeleyka.myweatherapp.Fragments.FragmenWeather"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:layout="@layout/fragment_weather_layout">

        </fragment>


        <fragment
            android:id="@+id/fragment_weather_forecast"
            android:name="ru.smeleyka.myweatherapp.Fragments.FragmentWeatherForecast"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:layout="@layout/fragment_weather_cast_layout">

        </fragment>


    </LinearLayout>

</ScrollView>